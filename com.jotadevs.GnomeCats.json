{
    "app-id" : "com.jotadevs.GnomeCats",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "3.28",
    "sdk" : "org.gnome.Sdk",
    "command" : "gnome-cats",
    "finish-args" : [
        "--share=network"
    ],
    "modules" : [
        {
            "name" : "cpython",
            "sources" : [
                {
                    "type" : "archive",
                    "url" : "https://www.python.org/ftp/python/3.6.6/Python-3.6.6.tar.xz",
                    "sha256" : "d79bc15d456e73a3173a2938f18a17e5149c850ebdedf84a78067f501ee6e16f"
                }
            ]
        },
        {
            "name" : "gnome-cats",
            "buildsystem" : "simple",
            "build-options" : {
                "build-args" : [
                    "--share=network"
                ]
            },
            "build-commands" : [
                "cp -r gnome-cats ${FLATPAK_DEST}/share/",
                "pip3 install ${FLATPAK_DEST}/share/gnome-cats/",
		"ln -s ${FLATPAK_DEST}/share/gnome-cats/__main__.py"
            ],
            "sources" : [
                {
                    "type" : "dir",
                    "path" : "gnome-cats/"
                }
            ]
        }
    ]
}
