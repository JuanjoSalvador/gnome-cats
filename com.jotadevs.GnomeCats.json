{
    "app-id" : "com.jotadevs.GnomeCats",
    "runtime" : "org.gnome.Platform",
    "runtime-version" : "3.28",
    "sdk" : "org.gnome.Sdk",
    "command" : "/app/share/gnome-cats/__main__.py",
    "finish-args" : [
        "--share=network",
        "--socket=wayland",
        "--socket=x11"
    ],
    "modules" : [
        {
            "name" : "gnome-cats",
            "sources" : [
                {
                    "type" : "dir",
                    "path" : "gnome-cats"
                }
            ],
            "buildsystem" : "simple",
            "build-commands" : [
                "mkdir -p /app/share",
                "cp -r gnome-cats ${FLATPAK_DEST}/share",
                "rm ${FLATPAK_DEST}/share/gnome-cats/{setup.py,requirements.txt}"
            ]
        }
    ],
    "build-options" : {
        "env" : {
        }
    }
}
